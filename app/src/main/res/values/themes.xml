<resources>

    <style name="Theme.Cyclone.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary_light</item>
        <item name="colorOnSecondary">@color/on_primary</item>
        <item name="colorError">@color/destruction</item>

        <item name="floatingActionButtonStyle">@style/Widget.Cyclone.FloatingActionButton</item>
        <item name="extendedFloatingActionButtonStyle">
            @style/Widget.Cyclone.ExtendedFloatingActionButton
        </item>

        <!-- Custom attributes -->
        <item name="colorPrecipitation">@color/precipitation</item>
        <item name="colorDestructive">@color/destruction</item>
        <item name="colorDestructiveRipple">@color/destructionRipple</item>
    </style>

    <style name="Theme.Cyclone" parent="Theme.Cyclone.Base">
        <item name="android:statusBarColor">@color/surface_dark</item>
    </style>

    <style name="Widget.Cyclone.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Cyclone.FloatingActionButton</item>
    </style>

    <style name="Widget.Cyclone.ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Cyclone.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.Cyclone.FloatingActionButton" parent="">
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorSecondary">@color/primary_light</item>
        <item name="colorOnPrimary">@color/on_primary_light</item>
        <item name="colorOnSecondary">@color/on_primary_light</item>
    </style>

    <style name="Widget.Cyclone.ConditionDetailsLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>